using CommunityToolkit.Maui;
using Microsoft.Extensions.Logging;
using WeatherNotesApp.Services;
using Microcharts.Maui;
using System;

namespace WeatherNotesApp
{
    public static class MauiProgram
    {
        public static MauiApp CreateMauiApp()
        {
            var builder = MauiApp.CreateBuilder();
            builder
                .UseMauiApp<App>()
                .UseMauiCommunityToolkit()
                .UseMicrocharts() // initialize Microcharts.Maui so ChartView in XAML can be loaded
                .ConfigureFonts(fonts =>
                {
                    fonts.AddFont("OpenSans-Regular.ttf", "OpenSansRegular");
                });

            string dbPath = Path.Combine(FileSystem.AppDataDirectory, "app.db");
            builder.Services.AddSingleton<DatabaseService>(s => new DatabaseService(dbPath));

            // register IServiceProvider so App constructor can receive it
            builder.Services.AddSingleton<Func<IServiceProvider>>(sp => () => sp);

            return builder.Build();
        }
    }
}
