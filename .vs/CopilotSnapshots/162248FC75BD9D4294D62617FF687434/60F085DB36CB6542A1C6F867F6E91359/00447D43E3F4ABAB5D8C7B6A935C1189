using System;
using WeatherNotesApp.ViewModels;
using WeatherNotesApp.Services;

namespace WeatherNotesApp.Views
{
    public partial class WeatherPage : ContentPage
    {
        public WeatherPage()
        {
            InitializeComponent();

            // resolve DatabaseService from MAUI DI
            var db = (Application.Current as App)?.Services.GetService(typeof(DatabaseService)) as DatabaseService;
            if (BindingContext is WeatherViewModel vm && db != null)
            {
                // replace ViewModel created by XAML with one that has DB service
                BindingContext = new WeatherViewModel(db);
            }
        }

        private async void OnShowForecastClicked(object sender, EventArgs e)
        {
            if (BindingContext is WeatherViewModel vm)
            {
                // ensure forecast is fetched for the current Weather.CityName
                var ok = await vm.EnsureForecastForWeatherAsync();
                if (ok)
                {
                    await Navigation.PushAsync(new ForecastPage(vm));
                    return;
                }
            }

            await DisplayAlert("Info", "Nu exista prognoza. Cauta mai intai o locatie.", "OK");
        }
    }
}
